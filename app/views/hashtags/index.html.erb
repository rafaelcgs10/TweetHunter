<div class="container h-10 d-flex justify-content-center">
  <div class="row text-white">
    <div class="jumbotron my-auto">
      <h1 class="display-4 text-truncate">Tweet Hunter</h1>
      <div class="px-2 text-center">
	<p> Where Tweets are Hunted </p>
      </div>
    </div>
  </div>
</div>

<div class="container h-10 d-flex justify-content-center">
  <%= link_to 'New hashtag', new_hashtag_path %>
</div>
<div class="container h-10 d-flex justify-content-center">
  <div class="row">
    <div class="card-deck">
      <% @hashtags.each do |tag| %>
      <div class="card mb-4" style="min-width: 10rem; max-width: 10rem;">
	<div class="card-body">
	  <h5 class="card-title"><%= tag.hashtag %></h5>
	  <a href="#" class="card-link" id=show_<%= tag.hashtag %>>
	    <%= link_to 'Show', hashtag_path(tag) %> </a>
	  <a href="#" class="card-link" id=delete_<%= tag.hashtag %>>
	    <%= link_to 'Delete', hashtag_path(tag), method: :delete,
		data: { confirm: 'Are you sure?' } %> </a>
	</div>
      </div>
      <% end %>
    </div>
  </div>
</div>
