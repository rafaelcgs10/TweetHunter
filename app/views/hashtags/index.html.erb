<div class="container h-10 d-flex justify-content-left">
  <%= link_to 'New hashtag', new_hashtag_path %>
</div>

<div class="container h-10 d-flex justify-content-center">
  <div class="row">
    <div class="card-deck">
      <div class="row h-10 d-flex justify-content-left">
	<% @hashtags.each do |tag| %>
	<div class="card mb-4" style="min-width: 10rem; max-width: 10rem;">
	  <div class="card-body">
	    <h5 class="card-title"><%= tag.hashtag %></h5>
	    <div class="row">
	      <div id="show_<%= tag.hashtag %>" class="card-link" >
		<%= link_to 'Show', hashtag_path(tag) %>
	      </div>
	      <div class="card-link" id=delete_<%= tag.hashtag %>>
		<%= link_to 'Delete', hashtag_path(tag), method: :delete,
		    data: { confirm: 'Are you sure?' } %>
	      </div>
	    </div>
	  </div>
	</div>
	<% end %>
      </div>
    </div>
  </div>
</div>
